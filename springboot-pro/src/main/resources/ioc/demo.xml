    <!--小型工厂方式-->

    <bean id="dog" class="com.alan.demo.ioc.xml.xml.AnimalFactory" factory-method="getAnimal">
        <constructor-arg value="dog"></constructor-arg>
    </bean>

    <bean id="cat" class="com.alan.demo.ioc.xml.xml.AnimalFactory" factory-method="getAnimal">
        <constructor-arg value="cat"></constructor-arg>
    </bean>


</beans>